{
    "compilerOptions": {
        /* Base Options: */
        "esModuleInterop": true, // Enables interoperability between CommonJS and ES Modules
        "skipLibCheck": true, // Skip type checking of declaration files (speeds up compilation)
        "target": "ES2020", // Target modern JavaScript environments
        "allowJs": true, // Allow JavaScript files to be compiled
        "checkJs": true, // Report errors in .js files based on JSDoc/inferred types
        "resolveJsonModule": true, // Allows importing JSON files
        "moduleDetection": "force", // Treat files as modules even without imports/exports
        /* Strictness */
        "strict": true, // Enable all strict type-checking options
        "noUncheckedIndexedAccess": true, // Add `| undefined` to index accesses
        /* Module Options */
        "module": "NodeNext", // Use Node.js's modern module system rules
        "moduleResolution": "NodeNext", // Algorithm for resolving module specifiers
        /* Emit Options */
        "declaration": true, // Generate corresponding '.d.ts' file.
        "emitDeclarationOnly": true, // Only emit '.d.ts' files; do not output JS from tsc
        "outDir": "./dist/types", // Redirect declaration output structure to the directory.
        "rootDir": "./src", // Specify the root directory of input files
        /* Source Map Options */
        // "sourceMap": true, // Generate corresponding '.map' file (optional, esbuild handles this for JS).
        // "declarationMap": true // Generate corresponding '.d.ts.map' file (optional).
    },
    "include": [
        "src/**/*"
    ], // Which files TypeScript should check/process
    "exclude": [
        "node_modules",
        "dist"
    ] // Exclude build output and dependencies
}